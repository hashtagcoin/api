{
   "swagger": "2.0",
   "info": {
      "version": 1,
      "title": "WebWallet API"
   },
   "host": "localhost:3000",
   "basePath": "/",
   "schemes": [
      "https"
   ],
   "consumes": "application/json",
   "produces": "application/json",
   "paths": {
      "/address/{address}/balance": {
         "get": {
            "description": "",
            "parameters": [
               {
                  "name": "address",
                  "in": "path",
                  "required": true,
                  "schema": {
                     "$ref": "#/definitions/crypto-address"
                  }
               },
               {
                  "name": "unit",
                  "in": "query",
                  "schema": {
                     "$ref": "#/definitions/crypto-unit-of-account"
                  }
               }
            ],
            "responses": {
               "default": {
                  "description": "",
                  "schema": {
                     "type": "object",
                     "properties": {}
                  },
                  "examples": {}
               }
            }
         }
      },
      "/transaction": {
         "post": {
            "description": "",
            "parameters": [
               {
                  "name": "hash",
                  "in": "body",
                  "required": true,
                  "schema": {
                     "$ref": "#/definitions/crypto-hash-object"
                  }
               },
               {
                  "name": "data",
                  "in": "body",
                  "required": true,
                  "schema": {
                     "$ref": "#/definitions/transaction-request-data"
                  }
               },
               {
                  "name": "sigs",
                  "in": "body",
                  "schema": {
                     "$ref": "#/definitions/crypto-signatures"
                  }
               }
            ],
            "responses": {
               "default": {
                  "description": "",
                  "schema": {
                     "type": "object",
                     "properties": {}
                  },
                  "examples": {}
               }
            }
         }
      }
   },
   "definitions": {
      "crypto-address": {
         "type": "string",
         "pattern": "/^[1-9A-HJ-NP-Za-km-z]+$/",
         "minLength": 26,
         "maxLength": 35,
         "description": "identifier for a cryptographic encumbrance"
      },
      "crypto-hash-object": {
         "type": "object",
         "required": [
            "alg",
            "val"
         ],
         "properties": {
            "alg": {
               "type": "string",
               "enum": [
                  "sha256"
               ],
               "description": "cryptographic hash algorithm",
               "default": "sha256"
            },
            "typ": {
               "type": "string",
               "enum": [
                  "stringify:data",
                  "merkle:data.inputs.hash.val"
               ],
               "description": "instructions for hash generation",
               "default": "stringify:data"
            },
            "val": {
               "type": "string",
               "minLength": 64,
               "maxLength": 64,
               "description": "cryptographic hash value"
            }
         }
      },
      "crypto-public-key": {
         "type": "string",
         "minLength": 66,
         "maxLength": 130,
         "description": "cryptographic public key in hex format"
      },
      "crypto-signatures": {
         "type": "array",
         "minItems": 1,
         "maxItems": 2,
         "uniqueItems": true,
         "items": {
            "type": "object",
            "required": [
               "alg",
               "wid",
               "sig"
            ],
            "properties": {
               "alg": {
                  "type": "string",
                  "enum": [
                     "ed25519"
                  ],
                  "description": "digital signature algorithm"
               },
               "wid": {
                  "$ref": "#/definitions/crypto-address"
               },
               "key": {
                  "$ref": "#/definitions/crypto-public-key"
               },
               "kid": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 0,
                  "description": "index of an array of public keys"
               },
               "sig": {
                  "type": "string",
                  "minLength": 140,
                  "maxLength": 140,
                  "description": "DER encoded digital signature"
               }
            }
         },
         "description": "an array of digital signature objects"
      },
      "crypto-unit-of-account": {
         "type": "string",
         "pattern": "/^[1-9A-HJ-NP-Za-km-z]+$/",
         "minLength": 26,
         "maxLength": 35,
         "description": "alphanumeric identifier for a cryptographic unit of account"
      },
      "math-big-number(+)": {
         "type": "string",
         "pattern": "/^[+]?[0-9]+(.[0-9]+)?$/",
         "maxLength": 101,
         "description": "big-number string for arbitrary-precision arithmetic"
      },
      "math-big-number": {
         "type": "string",
         "pattern": "/^[-+]?[0-9]+(.[0-9]+)?$/",
         "maxLength": 101,
         "description": "big-number string for arbitrary-precision arithmetic"
      },
      "transaction-amounts(+)": {
         "type": "array",
         "minItems": 1,
         "maxItems": 1,
         "uniqueItems": true,
         "items": {
            "type": "object",
            "required": [
               "cru",
               "val"
            ],
            "properties": {
               "cru": {
                  "$ref": "#/definitions/crypto-unit-of-account"
               },
               "val": {
                  "$ref": "#/definitions/big-number(+)"
               }
            }
         },
         "description": "positive big-number amounts per unit of account"
      },
      "transaction-amounts": {
         "type": "array",
         "minItems": 1,
         "maxItems": 1,
         "uniqueItems": true,
         "items": {
            "type": "object",
            "required": [
               "cru",
               "val"
            ],
            "properties": {
               "cru": {
                  "$ref": "#/definitions/crypto-unit-of-account"
               },
               "val": {
                  "$ref": "#/definitions/big-number"
               }
            }
         },
         "description": "big-number amounts per unit of account"
      },
      "transaction-inputs": {
         "type": "array",
         "minItems": 1,
         "maxItems": 1,
         "uniqueItems": true,
         "items": {
            "type": "object",
            "required": [
               "hash",
               "data",
               "sigs"
            ],
            "properties": {
               "hash": {
                  "$ref": "#/definitions/crypto-hash-object"
               },
               "data": {
                  "$ref": "#/definitions/transaction-iou-data"
               },
               "sigs": {
                  "$ref": "#/definitions/crypto-signature-object"
               }
            }
         },
         "description": "transaction inputs (IOUs)"
      },
      "transaction-iou-data": {
         "type": "object",
         "required": [
            "iss",
            "sub",
            "aud",
            "amt",
            "cru",
            "nce",
            "exp"
         ],
         "properties": {
            "iss": {
               "type": "string",
               "maxLength": 100,
               "description": "(issuer) transaction clearing domain"
            },
            "sub": {
               "$ref": "#/definitions/crypto-address"
            },
            "aud": {
               "$ref": "#/definitions/crypto-address"
            },
            "amt": {
               "$ref": "#/definitions/math-big-number(+)"
            },
            "cru": {
               "$ref": "#/definitions/crypto-unit-of-account"
            },
            "nce": {
               "type": "string",
               "maxLength": 100,
               "description": "(nonce) random value to prevent replay attacks"
            },
            "iat": {
               "type": "string",
               "format": "date-time",
               "description": "(issued at) for reference purpose only"
            },
            "nbf": {
               "type": "string",
               "format": "date-time",
               "description": "(not before) earliest valid date for clearing"
            },
            "exp": {
               "type": "string",
               "format": "date-time",
               "description": "(expires) latest valid date for clearing"
            }
         }
      },
      "transaction-outputs": {
         "type": "array",
         "minItems": 2,
         "maxItems": 2,
         "uniqueItems": true,
         "items": {
            "type": "object",
            "required": [
               "adr",
               "bal",
               "cru",
               "lim",
               "pre"
            ],
            "properties": {
               "adr": {
                  "$ref": "#/definitions/crypto-address"
               },
               "bal": {
                  "$ref": "#/definitions/math-big-number"
               },
               "cru": {
                  "$ref": "#/definitions/crypto-unit-of-account"
               },
               "lim": {
                  "type": "object",
                  "required": [
                     "low"
                  ],
                  "properties": {
                     "low": {
                        "$ref": "#/definitions/math-big-number",
                        "description": "lower limit constraint for the balance property"
                     },
                     "upp": {
                        "$ref": "#/definitions/math-big-number",
                        "description": "upper limit constraint for the balance property"
                     }
                  }
               },
               "pre": {
                  "$ref": "#/definitions/transaction-pointers"
               }
            }
         },
         "description": "transaction outputs (address state)"
      },
      "transaction-pointers": {
         "type": "array",
         "minItems": 0,
         "maxItems": 10,
         "uniqueItems": true,
         "items": {
            "type": "string",
            "pattern": "/^([0-9a-fA-F]{2})+::[0-9]{1}$/",
            "minLength": 67,
            "maxLength": 67,
            "description": "transaction pointer in {hash}::{index} format"
         },
         "description": "hash pointers to previous transaction outputs"
      },
      "transaction-record-data": {
         "type": "object",
         "required": [
            "amounts",
            "inputs",
            "outputs"
         ],
         "properties": {
            "amounts": {
               "$ref": "#/definitions/transaction-amounts(+)"
            },
            "credit": {
               "$ref": "#/definitions/transaction-amounts"
            },
            "easing": {
               "$ref": "#/definitions/transaction-amounts"
            },
            "inputs": {
               "$ref": "#/definitions/transaction-inputs"
            },
            "outputs": {
               "$ref": "#/definitions/transaction-outputs"
            }
         }
      },
      "transaction-request-data": {
         "type": "object",
         "required": [
            "inputs"
         ],
         "properties": {
            "inputs": {
               "$ref": "#/definitions/transaction-inputs"
            }
         }
      }
   }
}